@{
    ViewData["Title"] = "Profile";
    User user = ViewData["UserInfo"] as User;
    IEnumerable<HighScore> scores = ViewData["LevelTimes"] as IEnumerable<HighScore>;

}

<link rel="stylesheet" href="~/css/profile.css">

<!--sets up generic values to display in the profile-->
<h1>Profile</h1>

<h2>User: @user.Email </h2>

<h2>Gamer Points: @user.Cash </h2>

<h2>Nos Canisters: @user.NosContainers</h2>

<!--sets up table to display a users times on a track-->
<body>
    <h3>Level Scores</h3>
    <table>
        <thead>
            <tr>
                <th>
                    Level
                </th>
                <th>
                    Time
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var level in scores)
            {
                <tr>
                    <td>
                        @level.LevelID
                    </td>
                    <td>
                        @level.time
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!--Displays a users unlocks in a table-->
    <h3>Unlocks</h3>
    <table>
        <thead>
            <tr>
                <th>
                    Item
                </th>
                <th>
                    Status
                </th>
            </tr>

        </thead>
        <tbody>
            <tr>
                <td>
                    <img src="~/images/bike_red.png" />
                </td>
                @if (user.SkinRed == true)
                {
                    <td>
                        UNLOCKED!
                    </td>
                }
                else
                {
                    <td>
                        Locked...
                    </td>
                }
            </tr>
            <tr>
